    "raisonnement": {
      "weight": 0.25,
      "criteria": [
        {
          "id": "r1",
          "text": "Diagnostic le plus probable: Cancer pulmonaire",
          "subheader": "Examinateur-trice: \"Quelles sont tes hypothèses diagnostiques ? Donne les arguments pour et contre.\"",          
          "binaryOnly": true
        },
        {
          "id": "r2",
          "text": "Arguments POUR le cancer pulmonaire",
          "binaryOnly": false,
          "details": [
            "Tabagisme, toux, dyspnée, douleur thoracique, perte pondérale"
          ],
          "scoringRule": "4-6 = 3 pts, 2-3 = 1 pt, 0-1 = 0 pt"
        },
        {
          "id": "r3",
          "text": "Arguments CONTRE le cancer pulmonaire",
          "binaryOnly": false,
          "details": [
            "Absence de fatigue"
          ]
        },
        {
          "id": "r4",
          "text": "Diagnostic différentiel: Tuberculose",
          "binaryOnly": true
        },
        {
          "id": "r5",
          "text": "Arguments POUR la tuberculose",
          "binaryOnly": false,
          "details": [
            "Perte pondérale, toux, dyspnée"
          ]
        },
        {
          "id": "r6",
          "text": "Arguments CONTRE la tuberculose",
          "binaryOnly": false,
          "details": [
            "Pas de fièvre, pas de facteurs de risque (cortisone), pas d'antécédent, pas de TBC dans la famille"
          ],
          "scoringRule": "4-2 = 2 pts, 1 = 0.5 pt, 0 = 0 pt"
        },
        {
          "id": "r7",
          "text": "Diagnostic différentiel: Embolie pulmonaire",
          "binaryOnly": true
        },
        {
          "id": "r8",
          "text": "Arguments POUR l'embolie pulmonaire",
          "binaryOnly": false,
          "details": [
            "(Aggravation de) dyspnée, (aggravation de) toux, douleur thoracique respiro-dépendante"
          ]
        },
        {
          "id": "r9",
          "text": "Arguments CONTRE l'embolie pulmonaire",
          "binaryOnly": false,
          "details": [
            "Pas de voyage, pas d'immobilité, pas de TVP, pas d'ATCD d'EP"
          ],
          "scoringRule": "4-3 = 2 pts, 2-1 = 1 pt, 1-0 = 0 pt"
        },
        {
          "id": "r10",
          "text": "Diagnostic différentiel: Pneumonie",
          "binaryOnly": true
        },
        {
          "id": "r11",
          "text": "Arguments POUR la pneumonie",
          "binaryOnly": false,
          "details": [
            "Probable BPCO (toux grasse chronique chez fumeur), douleur thoracique respiro-dépendante, (aggravation de) dyspnée, (aggravation de) toux"
          ]
        },
        {
          "id": "r12",
          "text": "Arguments CONTRE la pneumonie",
          "binaryOnly": false,
          "details": [
            "Pas de changement de couleur/quantité des expectorations, pas de fièvre"
          ]
        },
        {
          "id": "r13",
          "text": "Diagnostic différentiel: Sténose mitrale",
          "binaryOnly": true
        },
        {
          "id": "r14",
          "text": "Arguments POUR la sténose mitrale",
          "binaryOnly": false,
          "details": [
            "Aucun"
          ]
        },
        {
          "id": "r15",
          "text": "Arguments CONTRE la sténose mitrale",
          "binaryOnly": false,
          "details": [
            "Pas de problème cardiaque connu, pas de souffle cardiaque, pas de rhumatisme articulaire aigu"
          ]
        },
        {
          "id": "r16",
          "text": "Évaluation globale du raisonnement clinique",
          "binaryOnly": false,
          "details": [
